<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Library Books</h1>
    <%= link_to 'Add New Book', new_book_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <div class="border rounded-lg p-6 shadow-md">
        <h2 class="text-xl font-semibold mb-2"><%= book.title %></h2>
        <p class="text-gray-600">By: <%= book.author %></p>
        <p class="text-gray-600">ISBN: <%= book.isbn %></p>
        <p class="mt-2">
          Status: 
          <span class="<%= book.available? ? 'text-green-600' : 'text-red-600' %>">
            <%= book.status.capitalize %>
          </span>
        </p>
        <%= link_to 'View Details', book_path(book), class: 'mt-4 inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>
</div>